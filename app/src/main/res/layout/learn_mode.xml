    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp">
        <Button
            android:id="@+id/current_status"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:background="@drawable/button_background_gray"
            android:gravity="center"
            android:padding="1dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="20sp" />

<!--        <TextView-->
<!--            android:id="@+id/current_status"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="#CCCCCC"-->
<!--            android:padding="8dp"-->
<!--            android:textSize="16sp" />-->


        <CheckBox
            android:id="@+id/thumb_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_with_background_and_border"
            android:button="@null"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/learn_mode_label_thumb_up"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/thumb_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_with_background_and_border"
            android:button="@null"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/learn_mode_label_thump_down"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:background="@drawable/button_background_gray"
            android:padding="0dp"
            android:text="@string/learn_mode_more_options_symbol"
            android:textStyle="bold"
            android:textSize="24sp" />
    </LinearLayout>
