<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Duration (hh:mm:ss)"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_hours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="hh"
            android:inputType="number"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=":" />

        <EditText
            android:id="@+id/edit_text_minutes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="mm"
            android:inputType="number"
            android:maxLength="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=":" />

        <EditText
            android:id="@+id/edit_text_seconds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ss"
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:paddingTop="16dp"
        android:rowCount="4">

        <Button
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="1" />

        <Button
            android:layout_margin="2dp"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="2" />
        <Button
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="3" />
        <Button
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="4" />
        <Button
            android:layout_margin="2dp"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="5" />
        <Button
            android:layout_margin="2dp"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="6" />
        <Button
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="7" />
        <Button
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="8" />
        <Button
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="9" />
        <Button
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="0" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="00" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Del." />



    </GridLayout>

    <Button
        android:id="@+id/button_ok"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK" />
</LinearLayout>
