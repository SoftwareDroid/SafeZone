<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_content_filter_type"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_no_adult_content_48"
            android:contentDescription="@string/filter_type"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of Rule"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/content_filter_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="short description of this rule\n Hallo"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#757575" />
        </LinearLayout>

        <Switch
            android:id="@+id/is_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <!-- Separator to the item below-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#E0E0E0" />
</LinearLayout>
