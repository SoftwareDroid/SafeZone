<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_duration"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:gravity="end"
            android:id="@+id/edit_input_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:maxLength="2" />

        <TextView
            android:id="@+id/unit_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:text="h" />

        <EditText
            android:id="@+id/edit_input_2"
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:maxLength="2" />

        <TextView
            android:id="@+id/unit_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="m" />

        <EditText
            android:id="@+id/edit_input_1"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:maxLength="2" />
        <TextView
            android:id="@+id/unit_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="s" />

    </LinearLayout>

    <GridLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:paddingTop="16dp"
        android:rowCount="4">

        <Button
            android:id="@+id/input_number_1"
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="1" />

        <Button
            android:id="@+id/input_number_2"
            android:layout_margin="2dp"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="2" />
        <Button
            android:id="@+id/input_number_3"
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="3" />
        <Button
            android:id="@+id/input_number_4"
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="4" />
        <Button
            android:id="@+id/input_number_5"
            android:layout_margin="2dp"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="5" />
        <Button
            android:id="@+id/input_number_6"
            android:layout_margin="2dp"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="6" />
        <Button
            android:id="@+id/input_number_7"
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="7" />
        <Button
            android:id="@+id/input_number_8"
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="8" />
        <Button
            android:id="@+id/input_number_9"
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="9" />
        <Button
            android:id="@+id/input_number_0"
            android:layout_margin="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="0" />
        <Button
            android:id="@+id/input_number_00"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="00" />
        <Button
            android:id="@+id/input_number_del"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:textSize="25sp"
            android:background="@drawable/baseline_backspace_24"
            android:textStyle="bold"
             />



    </GridLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp"
    android:gravity="end">
    <Button
        android:background="?attr/selectableItemBackground"
        android:textColor="@color/black"
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="50dp"
        android:text="@string/cancel"
        android:padding="8dp"
        android:textSize="14sp"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <Button
        android:background="?attr/selectableItemBackground"
        android:textColor="@color/black"
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="@string/OK"
        android:padding="8dp"
        android:textSize="14sp"
        android:minWidth="0dp"
        android:minHeight="0dp" />

</LinearLayout>
</LinearLayout>
