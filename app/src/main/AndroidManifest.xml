<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!--    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />-->

    <!-- Add the permission here -->
    <uses-permission android:name="android.permission.BIND_MEDIA_SESSION" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <!--    We need this permission to get info about any other apps. We cannot fix this warning below. Because of this.
    See https://developer.android.com/training/package-visibility -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
<!--    E.g send crash reports to server to get configs from internet-->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Required for Android 13 and above -->
    <!-- E.g in case of crash-->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
<!--    Learn Mode Buttons-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.BIND_DEVICE_ADMIN" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OurPact3"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".learn_mode.HelpDialogLearnMode" />
        <service
            android:name="com.example.ourpact3.ContentFilterService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
<!-- part of serservice        <service android:name=".learn_mode.OverlayService" />-->
        <meta-data
            android:name="android.security SELinux"
            android:value="permissive" />
        <receiver
            android:name=".MyDeviceAdminReceiver"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

    </application>



</manifest>
